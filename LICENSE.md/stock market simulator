#include<iostream>
#include<cmath>
using namespace std;

int main(){
    float a;  //a is amount
    float p =10000; //p is principle
    float r = .03;  //r is rate. here rate is 3%.
    
    for(int day = 1; day <=20; day++){
        a = p * pow(1+r,day); //pow is power function
        cout << "Day" << day << "-----" << a << endl;
    }
}
